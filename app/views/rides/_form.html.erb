<%= form_for @ride do |f| %>
	<fieldset>
		<div class='fields'>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div class='fields'>
			<%= f.label :description %>
			<%= f.text_field :description %>
		</div>
		<div class='fields'>
			<%= f.label :distance %>
			<%= f.text_field :distance %>
		</div>
		<div class='fields'>
			<%= f.label :map %>
			<%= f.text_field :map %>
		</div>
		<div class='fields'>
			<%= f.label :date %>
			<%= f.text_field :date %>
		</div>
		<div class='fields'>
			<%= f.label :time %>
			<%= f.text_field :time %>
		</div>
	</fieldset>	
	<%= f.submit %>
<% end %>